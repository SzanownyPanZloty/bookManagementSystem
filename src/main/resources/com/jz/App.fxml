         prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
         AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <items>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" layoutX="15.0" layoutY="170.0"
                     prefWidth="163.0" text="Add new book" textAlignment="CENTER" wrapText="true"
                     AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                     AnchorPane.topAnchor="5.0" />
                  <TextField fx:id="newBookName" layoutX="-5.0" layoutY="2.0" promptText="Name"
                     AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                     AnchorPane.topAnchor="30.0" />
                  <TextField fx:id="newBookAuthor" layoutX="15.0" layoutY="15.0" promptText="Author"
                     AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                     AnchorPane.topAnchor="60.0" />
                  <TextField fx:id="newBookYear" layoutX="15.0" layoutY="45.0" promptText="Year"
                     AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                     AnchorPane.topAnchor="90.0" />
                  <TextField fx:id="newBookGenre" layoutX="15.0" layoutY="75.0" promptText="Genre"
                     AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                     AnchorPane.topAnchor="120.0" />
                  <Button layoutX="61.0" layoutY="129.0" mnemonicParsing="false"
                     onAction="#addBookButtonClicked" text="Add book" AnchorPane.leftAnchor="0.0"
                     AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="150.0" />
                  <Label fx:id="statusLabel" alignment="CENTER" contentDisplay="CENTER"
                     layoutX="10.0" layoutY="160.0" prefWidth="163.0" textAlignment="CENTER"
                     wrapText="true" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                     AnchorPane.topAnchor="180.0" />
               </children>
            </AnchorPane>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                  <TextField fx:id="bookSearch" layoutX="-23.0" layoutY="25.0"
                     promptText="Search books (Regex supported)" AnchorPane.leftAnchor="0.0"
                     AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                  <TableView fx:id="booksTable" layoutX="-28.0" layoutY="11.0" prefHeight="388.0"
                     prefWidth="409.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                     AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
                     <columns>
                        <TableColumn id="bookIdColumn" fx:id="bookIdColumn" prefWidth="34.0"
                           text="ID" />
                        <TableColumn id="bookNameColumn" fx:id="bookNameColumn" prefWidth="120.0"
                           text="Name" />
                        <TableColumn id="bookAuthorColumn" fx:id="bookAuthorColumn" prefWidth="96.0"
                           text="Author" />
                        <TableColumn id="bookYearColumn" fx:id="bookYearColumn" prefWidth="49.5"
                           text="Year" />
                        <TableColumn id="bookGenreColumn" fx:id="bookGenreColumn" prefWidth="100.5"
                           text="Genre" />
                     </columns>
                     <contextMenu>
                        <ContextMenu>
                           <items>
                              <MenuItem mnemonicParsing="false" onAction="#onDeleteBook"
                                 text="Delete book" />
                           </items>
                        </ContextMenu>
                     </contextMenu>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </AnchorPane>
         </items>
      </SplitPane>
   </children>
</AnchorPane>